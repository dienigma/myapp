doctype html
html(lang='en')
  include common/head.pug
  +head("Starter MVP")
  body
    h1= title
    p Welcome to #{title}
    form(action="/", method="POST")
      input(name="lead_email", type="email",placeholder="Enter your email")
      button(type="submit") Submit
    if leads
      h1 Leads
      for lead in leads
        p(id=lead.id) 
          span #{lead.email}
          |
          a(href = "/lead/" + lead.id) Details
          |
          button(onClick = `deleteLead('${lead.id}')`) Delete

      include common/footer
      +footer()
      script(src="/javascripts/leads.js")

  
  